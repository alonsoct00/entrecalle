                            <!--script caracteres-->
							<script type="text/javascript">
                                $('#ant').keyup(function () {
                                    var left = 200 - $(this).val().length;
                                    if (left < 0) {
                                        left = 0;
                                    }
                                    $('#c1').text('Caracteres restantes: ' + left);
                                });
								
								$('#act').keyup(function () {
                                    var left = 200 - $(this).val().length;
